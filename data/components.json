{
  "version": "1.0.0",
  "components": {
    "divider": {
      "type": "expand",
      "self_closing": true,
      "description": "Visual divider bar with themed colors",
      "template": "{{shields:bar:colors=ui.bg,ui.surface,accent,ui.panel:style=flat-square/}}"
    },
    "swatch": {
      "type": "expand",
      "self_closing": true,
      "description": "Single color block",
      "args": ["color"],
      "template": "{{shields:block:color=$1:style=flat-square/}}"
    },
    "tech": {
      "type": "expand",
      "self_closing": true,
      "description": "Technology logo badge (uses Simple Icons)",
      "args": ["logo"],
      "template": "{{shields:icon:logo=$1:bg=ui.bg:logoColor=white:style=flat-square/}}"
    },
    "status": {
      "type": "expand",
      "self_closing": true,
      "description": "Status indicator block",
      "args": ["level"],
      "template": "{{shields:block:color=$1:style=flat-square/}}"
    },
    "header": {
      "type": "expand",
      "self_closing": false,
      "description": "Section header with gradient frame and bold text",
      "template": "{{frame:gradient}}{{mathbold:separator=dot}}$content{{/mathbold}}{{/frame}}"
    },
    "callout": {
      "type": "expand",
      "self_closing": false,
      "description": "Callout box with status indicator",
      "args": ["level"],
      "template": "{{frame:solid-left}}{{shields:block:color=$1:style=flat-square/}} $content{{/frame}}"
    }
  }
}
